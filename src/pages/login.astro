---
import Layout from "@/layouts/Layout.astro";
import { LoginForm } from "@/components/auth/LoginForm";
import AuthLayout from "@/layouts/AuthLayout.astro";

export const prerender = false;

const registrationSuccess = Astro.url.searchParams.get("registered") === "true";
---

<Layout title="Logowanie | Fiska">
  <AuthLayout title="Zaloguj się" description="Wprowadź swoje dane, aby się zalogować">
    {
      registrationSuccess && (
        <div class="mb-4 p-3 bg-green-50 text-green-700 border border-green-200 rounded-md">
          Rejestracja przebiegła pomyślnie. Możesz się zalogować.
        </div>
      )
    }
    <LoginForm client:load />
  </AuthLayout>
</Layout>
